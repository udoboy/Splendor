<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/senderTextPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_sender">


        <RelativeLayout
            android:id="@+id/relContentCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/slVideoConfirm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/contentThumbnail"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_splendor_placeholder"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="3dp"/>

            <TextView
                android:id="@+id/slMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contentThumbnail"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:inputType="textLongMessage|textMultiLine"
                android:maxWidth="200dp"
                android:minWidth="40dp"
                android:text=""
                android:background="@null"
                android:textColor="@color/white" />
        </RelativeLayout>


        <TextView
            android:id="@+id/slTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relContentCon"
            android:layout_alignEnd="@+id/relContentCon"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="3dp"
            android:text="11:00 AM"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>