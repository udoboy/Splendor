<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_reciever"
        android:layout_margin="10dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relRlContentCon"
         >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play"
                android:visibility="gone"
                android:id="@+id/rlVideoConfirm"/>
            <ImageView
                android:id="@+id/rlContentThumbnail"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_splendor_placeholder"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="11dp"/>

            <TextView
                android:id="@+id/rlMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlContentThumbnail"
                android:layout_marginStart="11dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:inputType="textLongMessage|textMultiLine"
                android:maxWidth="200dp"
                android:minWidth="40dp"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/rlTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relRlContentCon"
            android:layout_alignEnd="@id/relRlContentCon"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>